<%= link_to 'Add Bill', new_bill_path, class: 'btn btn-primary'%>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Event Name</th>
      <th>Date</th>
      <th>Amount</th>
      <th>State</th>
      <th>Added by</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <%- @bills.each do |bill| %>
      <tr>
        <td><%= bill.event.name %></td>
        <td><%= datetime_modifier(bill.created_at) %></td>
        <td><%= bill.amount %></td>
        <td><%= bill.aasm_state %></td>
        <td><%= bill.created_by.name %></td>
        <td><%= link_to 'Edit', edit_bill_path(bill), class: 'btn'%> | <%= link_to 'Show Details', transactions_bill_path(bill), class: 'btn'%> | <%= link_to 'Delete', bill_path(bill), class: 'btn', method: :delete%></td>
      </tr>
    <% end %>
  </tbody>

</table>
